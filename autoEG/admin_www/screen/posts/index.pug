extends /layout/layout

block main
	.show-sm
		#navp.container
			a(href='/screen/posts/#')
				flex.left
					svg.left.feather.feather-chevron-left(viewBox='0 0 24 24')
						polyline(points='15 18 9 12 15 6')
					svg.left.feather.feather-file-text(viewBox='0 0 24 24') 
						path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
						polyline(points='14 2 14 8 20 8')
						line(x1='16', y1='13', x2='8', y2='13')
						line(x1='16', y1='17', x2='8', y2='17')
						polyline(points='10 9 9 9 8 9')
					.left.padL Blog Posts
	p
	#tabp.container
		ul.tab
			li.tab-item.active
				a(href='#published') 
					.badge(data-badge='2') Published&nbsp;
			li.tab-item
				a(href='#scheduled')
					.badge(data-badge='2') Scheduled&nbsp;
	p
	#listp.container
		ul.nav.listbody
			li.nav-item
				a(href='/screen/posts/#')
					.flex.edge
						.left 
							.card
								.card-title.h5 My First Post
								.card-subtitle.text-gray 6 days ago
						.right
							figure.avatar.avatar-xl
								img(src='/assets/img/wolf.jpg', alt='Wolfgang Gehner')
							.dropdown.dropdown-right.right
								a.dropdown-toggle(href='#', tabindex='0')
									svg.feather.feather-more-horizontal(viewBox='0 0 24 24')
										circle(cx='12', cy='12', r='1')
										circle(cx='19', cy='12', r='1')
										circle(cx='5', cy='12', r='1')
								ul.menu
									li.menu-item.active
										a(href='/screen/posts/#')
											.flex.edge
												.left
													svg.feather.feather-edit-2(viewBox='0 0 24 24')
														polygon(points='16 3 21 8 8 21 3 21 3 16 16 3')
													.padL Edit
									li.menu-item.active
										a(href='/screen/posts/#')
											.flex.edge
												.left
													svg.feather.feather-eye(viewBox='0 0 24 24')
														path(d='M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z')
														circle(cx='12', cy='12', r='3')
													.padL View
									li.menu-item
										a(href='/screen/posts/#') 
											.flex.edge
												.left
													svg.feather.feather-trash-2(viewBox='0 0 24 24')
														polyline(points='3 6 5 6 21 6')
														path(d='M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2')
														line(x1='10', y1='11', x2='10', y2='17')
														line(x1='14', y1='11', x2='14', y2='17')
													.padL Trash
			li.nav-item
				a(href='/screen/posts/#')
					.flex.edge
						.left 
							.card
								.card-title.h5 My Second Post
								.card-subtitle.text-gray 6 days ago
						.right
							figure.avatar.avatar-xl
								img(src='/assets/img/vic.jpg', alt='Vic Cekvenich')
							.dropdown.dropdown-right.right
								a.dropdown-toggle(href='#', tabindex='0')
									svg.feather.feather-more-horizontal(viewBox='0 0 24 24')
										circle(cx='12', cy='12', r='1')
										circle(cx='19', cy='12', r='1')
										circle(cx='5', cy='12', r='1')
								ul.menu
									li.menu-item.active
										a(href='/screen/posts/#') Edit
									li.menu-item
										a(href='/screen/posts/#') Delete

	p
	#footp.container
		.divider.text-center(data-content='MyMeta Admin')


