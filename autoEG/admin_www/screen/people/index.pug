extends /layout/layout

block main
	.show-sm
		#navp.container
			a(href='/screen/people/#')
				flex.left
					svg.left.feather.feather-chevron-left(viewBox='0 0 24 24')
						polyline(points='15 18 9 12 15 6')
					svg.left.feather.feather-users(viewBox='0 0 24 24')
						path(d='M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2')
						circle(cx='9', cy='7', r='4')
						path(d='M23 21v-2a4 4 0 0 0-3-3.87')
						path(d='M16 3.13a4 4 0 0 1 0 7.75')
					.left.padL People
	p
	#listp.container
		ul.nav.listhead
			li.nav-item
				.flex.edge
					.left.badge(data-badge='2') Editors
					a.btn.right(href='#invite')
						.flex.edge
							svg.feather.feather-user-plus(viewBox='0 0 24 24')
								path(d='M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2')
								circle(cx='8.5', cy='7', r='4')
								line(x1='20', y1='8', x2='20', y2='14')
								line(x1='23', y1='11', x2='17', y2='11')
							.padL Invite

		ul.nav.listbody
			li.nav-item
				a(href='/screen/people/#')
					.flex.edge
						.left 
							figure.avatar.avatar-xl
								img(src='/assets/img/wolf.jpg', alt='Wolfgang Gehner')
							.card.padL
								.card-title.h6 Wolfgang Gehner
								.card-subtitle.text-gray Editor
						.right
							.dropdown.dropdown-right.right
								a.dropdown-toggle(href='#', tabindex='0') ...
									//-svg.feather.feather-more-horizontal(viewBox='0 0 24 24')
										circle(cx='12', cy='12', r='1')
										circle(cx='19', cy='12', r='1')
										circle(cx='5', cy='12', r='1')
								ul.menu
									li.menu-item
										a(href='#' onclick="alert('bla');close()") Edit
									li.menu-item
										a(href='/screen/people/#') Delete
			li.nav-item
				a(href='/screen/people/#')
					.flex.edge
						.left 
							figure.avatar.avatar-xl
								img(src='/assets/img/vic.jpg', alt='Vic Cekvenich')
							.card.padL
								.card-title.h6 Vic Cekvenich
								.card-subtitle.text-gray Editor
						.right
							.dropdown.dropdown-right.right
								a.dropdown-toggle(href='#', tabindex='0')
									svg.feather.feather-more-horizontal(viewBox='0 0 24 24')
										circle(cx='12', cy='12', r='1')
										circle(cx='19', cy='12', r='1')
										circle(cx='5', cy='12', r='1')
								ul.menu
									li.menu-item
										a(href='/screen/people/#') Edit
									li.menu-item
										a(href='/screen/people/#') Delete
	p
	#footp.container
		.divider.text-center(data-content='MyMeta Admin')

	script.
		close(e){
			e.stopPropagation();
			e.cancelBubble();
			$('a.dropdown-toggle').blur()
		}


