   body
      script(src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
      script(src= ROOT + '/assets/js/setup.js')

      .c-offcanvas-content-wrap
         #navBar.nav.flex.edge.delayShowing
            .left
               .pad.has-text-white.is-size-4 Metabake.org
            .right
               .pad
                  a.is-hidden-touch.navItem(href= ROOT + '#about') About Us
                  a.is-hidden-touch.navItem(href= ROOT + '#services') Services
                  a.is-hidden-touch.navItem(href= ROOT + '#team') Team
                  a.is-hidden-touch.navItem(href= ROOT + '#contact') Contact Us
                  a#off-cbut.js-offcanvas-trigger( href='#navOpen')
                     #bars.bord.is-hidden-desktop(style='color:white')
                        .bord.show-lg(style='color:white')
                           svg.feather(width='24', height='24', viewBox='0 0 24 24')
                              line(x1='3', y1='12', x2='21', y2='12')
                              line(x1='3', y1='6', x2='21', y2='6')
                              line(x1='3', y1='18', x2='21', y2='18')

         #router
            block main

      #navOpen.delayShowing
         .navOpenBrand.has-background-black.has-text-white
           .pad.is-size-4 My App
         ul.navOpen-list
            li
               a(href=ROOT + '#about') About Us
            li
               a(href= ROOT + '#services') Services
            li
               a(href=ROOT + '#team') Team
            li
               a(href= ROOT + '#contact') Contact Us


      link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet')
      link(href='https://fonts.googleapis.com/css?family=Antic+Didone', rel='stylesheet')

